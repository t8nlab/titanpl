{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@titanpl/native": [
                "app/t.native"
            ],
            "@titanpl/route": [
                "./titan/titan"
            ],
            "*": [
                "./app/*"
            ]
        }
    },
    "include": [
        "app/**/*",
        "titan/**/*",
        "node_modules/**/titan-ext.d.ts"
    ]
}